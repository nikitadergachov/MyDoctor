<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical|center">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/pill"
            android:id="@+id/medic_image_view" />

        <TextView
        android:text="Медикаменты"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/medic_text_view"
            android:textAlignment="center"
            android:textSize="20sp" />
</LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/pharma"
            android:id="@+id/procedure_image_view" />

        <TextView
            android:text="Процедуры"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:id="@+id/procedure_text_view"
            android:textAlignment="textEnd"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="98dp"
            android:layout_height="101dp"
            app:srcCompat="@drawable/analiz"
            android:id="@+id/analyz_image_view" />

        <TextView
            android:text="Анализы"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:id="@+id/analyz_text_view"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/medical_bag"
            android:id="@+id/vizit_image_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vizit_text_view"
            android:textAlignment="center"
            android:text="Визиты к врачу"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <ImageView
            app:srcCompat="@drawable/calendar"
            android:id="@+id/recomendation_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:text="Рекомендации"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recomendation_text_view"
            android:textSize="20sp"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/settings"
            android:id="@+id/setting_image_view" />

        <TextView
            android:text="Настройки"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:id="@+id/setting_text_view"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>
    </GridLayout>